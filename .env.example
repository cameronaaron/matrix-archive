# Matrix Archive Configuration
# Copy this file to .env and fill in your values

# Authentication method (choose one)
# Option 1: Standard Matrix authentication
MATRIX_USER=@your-username:matrix.org
MATRIX_PASSWORD=your-password
MATRIX_HOST=https://matrix.org

# Option 2: Beeper authentication (preferred for Beeper users)
# Set this to true to use Beeper authentication
USE_BEEPER_AUTH=false
# Beeper domain (usually beeper.com)
BEEPER_DOMAIN=beeper.com
# These will be set automatically after running 'matrix-archive beeper-login'
BEEPER_EMAIL=
BEEPER_TOKEN=
BEEPER_USERNAME=

# Comma-separated list of room IDs to archive
# Run "matrix-archive list" to find room IDs
MATRIX_ROOM_IDS=!roomid1:matrix.org,!roomid2:matrix.org

# MongoDB connection URI (optional, defaults to local MongoDB)
# Examples:
# - Local: mongodb://localhost:27017
# - Remote: mongodb://username:password@host:port/database
MONGODB_URI=mongodb://localhost:27017